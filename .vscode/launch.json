{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug AudioProcessingProject",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/bin/AudioProcessingProject",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/build/bin",
      "environment": [
        { "name": "DISPLAY", "value": ":99" } // Configuração do DISPLAY
      ],
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
  ]
}
